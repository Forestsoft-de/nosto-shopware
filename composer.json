{
  "name": "nosto/nosto-shopware-plugin",
  "description": "Increase your conversion rate and average order value by delivering your customers personalized product recommendations throughout their shopping journey.",
  "license": [
    "BSD-3-Clause"
  ],
  "version": "2.4.8",
  "require": {
    "php": ">=5.4.0",
    "nosto/php-sdk": "3.15.*",
    "ext-json": "*"
  },
  "require-dev": {
    "phan/phan": "^2.6",
    "squizlabs/php_codesniffer": "^3.5",
    "phpmd/phpmd": "^2.6",
    "sebastian/phpcpd": "4.1.0",
    "phing/phing": "2.*",
    "shopware/shopware": "~5.6",
    "wimg/php-compatibility": "^9.0",
    "staabm/annotate-pull-request-from-checkstyle": "^1.1",
    "mridang/pmd-annotations": "^0.0.2",
    "drenso/phan-extensions": "^2.5"
  },
  "autoload": {
    "psr-4": {
      "Nosto\\": ""
    }
  },
  "scripts": {
    "preparePackage": [
      "rm -fr NostoTagging",
      "mkdir NostoTagging",
      "rsync -avr --exclude='vendor/' * NostoTagging",
      "composer install -d NostoTagging/ --no-dev"
    ],
    "pre-archive-cmd": [
      "@preparePackage"
    ]
  },
  "archive": {
    "exclude": [
      "*.*",
      "Dockerfile",
      "LICENSE",
      "!NostoTagging",
      "NostoTagging/.gitignore",
      "NostoTagging/build.xml",
      "NostoTagging/build",
      "NostoTagging/vendor/nosto/php-sdk/codeception.yml",
      "NostoTagging/vendor/nosto/php-sdk/.gitignore",
      "NostoTagging/vendor/nosto/php-sdk/Gruntfile.js",
      "NostoTagging/vendor/nosto/php-sdk/package.json",
      "NostoTagging/vendor/nosto/php-sdk/composer.json",
      "NostoTagging/vendor/nosto/php-sdk/composer.lock",
      "NostoTagging/vendor/nosto/php-sdk/build.xml",
      "NostoTagging/vendor/nosto/php-sdk/Dockerfile",
      "NostoTagging/vendor/nosto/php-sdk/Jenkinsfile",
      "NostoTagging/vendor/nosto/php-sdk/src/.env.example",
      "NostoTagging/vendor/nosto/php-sdk/phan.php",
      "NostoTagging/composer.json",
      "NostoTagging/composer.lock",
      "NostoTagging/Dockerfile",
      "NostoTagging/Jenkinsfile",
      "NostoTagging/vendor/.github",
      "NostoTagging/tests/",
      "NostoTagging/phing/",
      "NostoTagging/build/",
      "NostoTagging/.phan/",
      "NostoTagging/build.xml",
      "NostoTagging/ruleset.xml",
      "NostoTagging/Gruntfile",
      "NostoTagging/Shopware.iml",
      "NostoTagging/codeception",
      "NostoTagging/package.json",
      "NostoTagging/phan.php",
      "NostoTagging/idea.properties",
      "NostoTagging/NostoTagging"
    ]
  }
}
